function dobrar(n: number): number {
     return n * 2;
} 
console.log(dobrar(5));


//Crie uma função saudacao que receba um nome ( string) e retorne "Olá, <nome>".
function saudacao(nome: string): string{
    return "olá," + nome
}
console.log(saudacao("erica")) 


