//Crie uma tupla que armazene [nome, idade].//
let pessoa: [string, number];
pessoa = ["lua", 17];
console.log("Nome:", pessoa[0]);
console.log("idade:", pessoa[1]);

//Crie um enum para representar níveis de acesso: ADMIN, USER, GUEST.
 enum Acesso { ADMIN, USER, GUEST }
 console.log(Acesso[0], Acesso.GUEST); 


// Crie um objeto pessoa com propriedades tipadas (nome, idade, email).
